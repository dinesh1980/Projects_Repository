<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Poll Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment-with-locales.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/3.1.3/js/bootstrap-datetimepicker.min.js"></script>
    <link href="http://112.196.3.42:8195/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/Content/icomoon.css" rel="stylesheet" />
    <link href="~/Content/jquery.lightbox-0.5.css" rel="stylesheet" />
    <link href="~/Content/lightbox.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        #jquery-lightbox {
            width: 110%;
            max-width: 110%;
            transform: translateX(-5%);
        }

        [class^="thumbnails"] li {
            background: none;
            box-shadow: none;
        }

        .jquery-lightbox {
            top: 20px !important;
        }

        img {
            vertical-align: middle;
        }

        ul li {
            list-style-type: none;
        }
    </style>
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Poll Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <a href="/" class="navbar-brand">Poll Application</a>
            </div>

            <ul class="nav nav-pills navbar-right">
                @if (Session["UserDetails"] != null)
                {
                    <li role="presentation" style="padding:7px;" class="active"><a href="@Url.Action("MyPolls", "Home")">My Polls</a></li>
                }
                <li>
                    @if (Session["UserDetails"] != null)
                    {
                        <div class="dropdown" style="padding-top: 7px;">
                            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                <span class="glyphicon glyphicon-user"></span>&nbsp;@Session["username"]
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                <li><a href="@Url.Action("ViewProfile", "Profile")">Profile</a></li>
                                <li><a href="@Url.Action("LogOff", "Login")">Log Out <span class="glyphicon glyphicon-log-out"></span></a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="dropdown" style="padding-top: 7px;">
                            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                &nbsp;Login
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                <li><a href="@Url.Action("Index", "Login")">Login</a></li>

                            </ul>
                        </div>

                    }
                </li>
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Public Demo Version - 1.0</p>
        </footer>
    </div>


    <script src="~/Scripts/jquery.lightbox-0.5.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("[class^=thumbnails] a").each(function (index) {               
                $(this).lightBox();
            });
        });
    </script>

</body>
</html>
