@model PagedList.IPagedList<Polls.Models.MyPolls>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Home Page";
}




<section id="public-questions" class="container">
    <div class='card list-group-card'>
        <div class='card-block'>
            <h2 class='card-title'>
                Recent Polls
            </h2>
            <ul class="nav nav-pills nav-outlined nav-centered">
                @foreach (var item in ViewBag.Categories)
                {
                    <li class="nav-item">
                        @Html.ActionLink((string)item.catName, "Index", new { catname = item.catName }, new { @class = "nav-link" })

                    </li>
                }


            </ul>
        </div>
        <ul class='list-group-flush list-group' id="example">
            @foreach (var item in Model)
            {
                <li class='list-group-item'>
                    <div class='pull-right'>
                        <span class="poll-audience" style=""> <i class="fa fa-group fa-fw"></i> <span class='label label-default'>@item.responseCompleted Respondents</span><span class="label label-success">@item.tags</span>  </span>
                    </div>
                    <a href="/Home/GetPollResult?pollId=@item.pollId">@item.question ?</a>
                </li>
            }


        </ul>
        <br />
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))
    </div>

</section>
